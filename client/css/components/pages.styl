.demoUserPlayLink
	font-size 1.5em

.introduction
	iframe
		margin-top 20px
	p
		margin-top 50px
		a
			background $csGreen
			padding 20px
			border-radius 5px
			color white
			font-size 1.5em
.welcome
	text-align center
	margin-bottom 40px
	h1
		font-size 1.5em
		color $csGray
	h4 
		font-size 2.5em
		color $csGreen
		font-family $buttonFont
#loginForm
	input 
		margin 10px 0


p, li, h1,h2, h3, h4, h5
	font-family $bodyFont

a, button, i, span
	font-family $buttonFont
	font-weight 300

a:hover
	text-decoration none
.moreTopMargin
	margin-top 10px
.iconInfo
	margin-bottom 30px

.console
	margin 25px auto
	padding 25px
	width 800px
	background #eee
	box-shadow 3px 3px 3px #999
