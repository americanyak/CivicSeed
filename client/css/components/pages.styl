.demoUserPlayLink
	font-size 1.5em

.introduction
	iframe
		margin-top 20px
	p
		margin-top 50px
		a
			background $csGreen
			padding 20px
			border-radius 5px
			color white
			font-size 1.5em
.homepage
	margin-top 80px
	.welcome
		h1
			font-size 3em
			font-family $cursiveFont
			color $csGreen
			text-align center
			line-height 1.4
		h4 
			font-size 1.5em
			font-weight 400
			color $csLightGreen
			font-family $bodyFont
			text-align center
		p
			font-size 1.2em
			text-align justify
			color $csGray
		.span3
			p
				margin-bottom 0
				padding-bottom 0
	#loginForm
		input 
			margin 10px 0
			width 100%
.welcome p.ready
	text-align center
	margin-bottom 40px
