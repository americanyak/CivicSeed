	h4 
		font-size 2.5em
		color $csGreen
		font-family $buttonFont
#loginForm
	input 
		margin 10px 0

.moreTopMargin
	margin-top 10px
.iconInfo
	margin-bottom 30px

.console
	margin 25px auto
	padding 25px
	width 800px
	background #eee
	box-shadow 3px 3px 3px #999
	form
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
	.loader
		margin 12px 0
		padding 20px 20px 8px
